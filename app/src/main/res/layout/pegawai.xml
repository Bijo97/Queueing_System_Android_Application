<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0092E7"
    tools:context="com.example.n7t.myapplication.MainActivity">

    <TextView
        android:text="70"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="60dp"
        android:layout_y="200dp"
        android:textColor="#FFFFFF"
        android:textSize="200sp"
        android:id="@+id/text_noantrian"
        android:layout_below="@+id/textView3"
        android:layout_alignEnd="@+id/textView3" />

    <TextView
        android:text="NO ANTRIAN TERAKHIR"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_x="60dp"
        android:layout_y="205dp"
        android:textSize="21sp"
        android:id="@+id/textView3"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/textView4"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="Nama: Reggie
Jabatan: Costumer Service BCA"
        android:gravity="center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="77dp"
        android:layout_y="120dp"
        android:textColor="#FFFFFF"
        android:id="@+id/textView4"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp" />

    <Button
        android:id="@+id/b_st"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/text_noantrian"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="24dp"
        android:layout_x="43dp"
        android:layout_y="458dp"
        android:background="#FFA726"
        android:onClick="FungsiClick"
        android:text="Open"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />

    <Button
        android:id="@+id/b_next"
        android:layout_width="117dp"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/b_st"
        android:layout_alignBottom="@+id/b_st"
        android:layout_alignParentEnd="true"
        android:layout_x="203dp"
        android:layout_y="459dp"
        android:background="#FFA726"
        android:onClick="FungsiClick"
        android:text="Start"
        android:textColor="#FFFFFF"
        android:textSize="25sp" />


</RelativeLayout>
