<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0092E7"
    tools:context="com.example.n7t.myapplication.MainActivity">

    <EditText
        android:id="@+id/e_user"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="75dp"
        android:layout_y="235dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/user"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Username"
        android:inputType="textPersonName"
        android:layout_alignBottom="@+id/imageView3"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="18dp" />

    <EditText
        android:id="@+id/e_pass"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_x="75dp"
        android:layout_y="280dp"
        android:background="#FFFFFF"
        android:drawableLeft="@drawable/lock"
        android:ems="10"
        android:fontFamily="serif"
        android:hint="Password"
        android:inputType="textPersonName"
        android:layout_below="@+id/imageView3"
        android:layout_alignStart="@+id/e_user" />

    <ImageView
        android:layout_width="160dp"
        android:layout_height="219dp"
        app:srcCompat="@drawable/icon"
        android:layout_x="90dp"
        android:layout_y="60dp"
        android:id="@+id/imageView3"
        android:layout_marginTop="42dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:id="@+id/b_login"
        android:layout_width="164dp"
        android:layout_height="32dp"
        android:layout_x="95dp"
        android:layout_y="320dp"
        android:background="#FFA726"
        android:text="Login"
        android:textColor="#FFFFFF"
        android:textSize="16sp"
        android:onClick="FungsiClick"
        android:layout_below="@+id/e_pass"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="17dp" />

    <TextView
        android:id="@+id/t_register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="209dp"
        android:layout_y="360dp"
        android:text="Register"
        android:onClick="FungsiClick"
        android:textColor="#FFFFFF"
        android:layout_below="@+id/b_login"
        android:layout_alignEnd="@+id/e_pass"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/t_staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignStart="@+id/t_register"
        android:layout_marginBottom="20dp"
        android:layout_x="267dp"
        android:layout_y="497dp"
        android:background="#000000"
        android:onClick="FungsiClick"
        android:text=" STAFF "
        android:textColor="#ffff"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="195dp"
        tools:layout_editor_absoluteY="400dp" />


</RelativeLayout>
