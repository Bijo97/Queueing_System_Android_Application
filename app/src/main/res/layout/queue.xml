<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0092E7"
    tools:context="com.example.n7t.myapplication.MainActivity">

    <Button
        android:text="BACK"
        android:layout_width="164dp"
        android:layout_height="wrap_content"
        android:layout_x="95dp"
        android:layout_y="420dp"
        android:background="#FFA726"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:id="@+id/b_back"
        android:onClick="FungsiClick"
        android:layout_marginTop="16dp"
        android:layout_below="@+id/text_estimasi"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="115dp"
        android:layout_y="145dp"
        android:textColor="#FFFFFF"
        android:textSize="200sp"
        android:gravity="center_horizontal"
        android:id="@+id/text_noantrian"
        android:layout_below="@+id/textView3"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="NAMA"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_x="125dp"
        android:layout_y="90dp"
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:id="@+id/text_perusahaan"
        android:layout_alignBaseline="@+id/b_cancel"
        android:layout_alignBottom="@+id/b_cancel"
        android:layout_toStartOf="@+id/b_back" />

    <TextView
        android:text="NO ANTRIAN"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_x="115dp"
        android:layout_y="175dp"
        android:textSize="21sp"
        android:gravity="center_horizontal"
        android:id="@+id/textView3"
        android:layout_below="@+id/b_cancel"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="18dp" />

    <TextView
        android:text="Estimasi: 00:07"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFF"
        android:layout_x="90dp"
        android:layout_y="375dp"
        android:textSize="21sp"
        android:id="@+id/text_estimasi"
        android:layout_below="@+id/text_noantrian"
        android:layout_centerHorizontal="true" />

    <Button
        android:text="CANCEL "
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_x="265dp"
        android:layout_y="0dp"
        android:background="#FFA726"
        android:textColor="#FFFFFF"
        android:drawableLeft="@drawable/cancel"
        android:textSize="16sp"
        android:id="@+id/b_cancel"
        android:onClick="FungsiClick"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="24dp" />


</RelativeLayout>
