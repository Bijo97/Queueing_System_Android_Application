<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#0092E7"
    tools:context="com.example.n7t.myapplication.MainActivity">

    <ImageView
        android:id="@+id/b_scan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="135dp"
        android:onClick="FungsiClick"
        app:srcCompat="@drawable/qrcodereader"
        android:layout_marginTop="22dp"
        android:layout_below="@+id/b_exit"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:id="@+id/b_notif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="210dp"
        android:layout_y="135dp"
        android:onClick="FungsiClick"
        app:srcCompat="@drawable/notifications"
        android:layout_below="@+id/b_scan"
        android:layout_alignParentStart="true" />

    <ImageView
        android:id="@+id/b_sett"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="210dp"
        android:layout_y="320dp"
        android:onClick="FungsiClick"
        app:srcCompat="@drawable/setting"
        android:layout_below="@+id/b_notif"
        android:layout_alignStart="@+id/b_scan" />

    <ImageView
        android:id="@+id/b_queue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="20dp"
        android:layout_y="320dp"
        android:onClick="FungsiClick"
        app:srcCompat="@drawable/antrian"
        android:layout_below="@+id/b_scan"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/b_exit"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_x="272dp"
        android:layout_y="31dp"
        android:background="#FFA726"
        android:drawableLeft="@drawable/exit"
        android:text="EXIT"
        android:textColor="#FFFFFF"
        android:onClick="FungsiClick"
        android:textSize="20sp"
        android:layout_alignTop="@+id/text_customer"
        android:layout_alignParentEnd="true" />

    <TextView
        android:id="@+id/text_customer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_x="143dp"
        android:layout_y="44dp"
        android:textColor="#FFFFFF"
        android:gravity="center"
        android:text="id_customer"
        android:layout_alignParentTop="true"
        android:layout_toStartOf="@+id/b_scan"
        android:layout_marginTop="34dp" />



</RelativeLayout>
